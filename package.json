{
  "name": "ionx-search-select",
  "workspaces": [
    "projects/*"
  ],
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve demo",
    "watch": "ng build --watch --configuration development",
    "build": "ng build",
    "build:lib": "ng build ionx-search-select",
    "build:demo": "ng build demo",
    "test": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "test:lib": "ng test ionx-search-select --watch=false --browsers=ChromeHeadless --code-coverage || ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "clean": "rimraf dist .angular/out-tsc || rm -rf dist .angular/out-tsc",
    "verify": "npm run clean && npm ci && npm run test && npm run build:lib && npm run pack",
    "pack": "npm pack ./dist/ionx-search-select --dry-run",
    "publish:dist": "npm publish ./dist/ionx-search-select --access public",
    "version:patch": "npm version patch -w ionx-search-select",
    "version:minor": "npm version minor -w ionx-search-select",
    "version:major": "npm version major -w ionx-search-select",
    "release:patch": "npm run verify && npm run version:patch && npm run publish:dist",
    "release:minor": "npm run verify && npm run version:minor && npm run publish:dist",
    "release:major": "npm run verify && npm run version:major && npm run publish:dist",
    "release": "npm run verify && npm run release:patch"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.2.0",
    "@angular/compiler": "^20.2.0",
    "@angular/core": "^20.2.0",
    "@angular/forms": "^20.2.0",
    "@angular/platform-browser": "^20.2.0",
    "@angular/router": "^20.2.0",
    "@ionic/angular": "^8.7.5",
    "ionicons": "^8.0.13",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.2.1",
    "@angular/compiler-cli": "^20.2.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.3.0",
    "sass": "^1.93.2",
    "typescript": "~5.9.2"
  }
}
